  <html>
  <style>

  input[type=text], select {
      width: 80%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;

  }

  input[type=submit] {
      width: 80%;
      background-color: #ff5252;
      color: white;
      padding: 14px 20px;
      margin: 8px 0;
      border: none;
      border-radius: 4px;
      cursor: pointer;
  }


  div.wrapper {
    margin: auto;
    position:  absolute;
    /* top : 20%; */
    text-align: left;
    /* width: 25%;
    height:50%; */
    border:1px solid black;
    border-radius: 4%;
    background-color: #f2f2f2;
  }

  input[type=submit]:hover {
      background-color: #d50000;
  }

  div {
      border-radius: 3%;
      background-color: #f2f2f2;
      padding: .5%;
      text-align: left;
  }
  </style>
  <body>


    <div class="wrapper">
      <h2>Create a Playlist</h2>
    <%= form_for @playlist do |t|%>

      <%=t.label :name%>
      <%= t.text_field :name, placeholder: "Playlist name here..."%>
      <br>
      <%=t.label :passphrase%>
      <%= t.text_field :passphrase, placeholder: "Passphrase here..."%>
      <br><br>
      <%= t.submit "Create Playlist " %>
      <%end%><br><br>
  </div>
  <a target="_blank" href="http://localhost:3000/">
    <div class="gallery"> </div>

  </body>
  </html>
